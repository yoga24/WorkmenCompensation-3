<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_table_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/table_image_uiic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/uiic_full_logo" />

    <TextView
        android:id="@+id/table_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_image_uiic"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/table_text_desig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_text_name"
        android:layout_margin="8dp"
        android:text="Designation"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/table_image_break"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/table_text_desig"
        android:scaleType="fitXY"
        android:src="@drawable/line_break" />

    <TableLayout
        android:id="@+id/table_layout_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_image_break"
        android:stretchColumns="6" />


</RelativeLayout>
